{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "offers-ms",
            "env": {
                "HTTP_PORT": 5000
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/services/offers-ms/index.js"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Integration Tests",
            "program": "${workspaceFolder}/test/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/test",
            "args": [
                "--config",
                "./integrations/testconfig.json",
                "--exit"
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Performance Tests",
            "program": "${workspaceFolder}/test/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/test",
            "args": [
                "--config",
                "./performance/testconfig.json",
                "--exit"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "seed",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/data/scripts/index.js"
        }
    ]
}